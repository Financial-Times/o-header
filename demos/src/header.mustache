<header class="o-header o-header--light-on-dark o-registry-demo-chunk" data-o-component="o-header">
	<div class="o-header__container">
		<div class="o-header__inner">
			<div class="o-header__top">
				<div class="o-header__edition-switch o--if-js">
					<button class="o-header__edition-switch-button" aria-controls="o-header__edition-switch-container" aria-expanded="false" data-o-header-edition-switch-button>UK Edition</button>
					<ul class="o-header__edition-switch-container" id="o-header__edition-switch-container" aria-hidden="true">
						<li><a href="#" class="o-header__edition-switch-link">International Edition</a></li>
					</ul>
				</div>

				<div class="o-header__masthead">
					<a href="#" title="Go to Financial Times homepage"><span>Financial Times</span></a>
				</div>

				<nav class="o-header__tools" role="navigation" aria-label="Useful tools">
					<ul class="o-header__tools-items">
						{{ #toolsItems }}
						<li class="o-header__tools-item">
							<a class="o-header__tools-link" href="{{url}}" {{attributes}}>{{{name}}}</a>
						</li>
						{{ /toolsItems }}
					</ul>
				</nav>
			</div>

			<div class="o-header__bottom" data-o-header-suggestions>
				<div class="o-header__search">
					<!-- Links to a core experience nav outside of the header -->
					<a class="o-header__search-toggle o--if-no-js" href="#">
						<span class="o-header__search-toggle-text o-header__search-toggle-text--open">Search</span>
					</a>

					<div class="o--if-js">
						<button class="o-header__search-toggle" data-o-header-togglable data-o-header-togglable-search aria-hidden="true">
							<span class="o-header__search-toggle-text o-header__search-toggle-text--open">Search</span>
							<span class="o-header__search-toggle-text o-header__search-toggle-text--close">Close</span>
						</button>

						<form action="#" id="o-header__search-form" class="o-header__search-form" data-o-header-search role="search">
							<input id="o-header__search-term" type="search" name="q" class="o-header__search-input"  autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" placeholder="Type to search the Financial Times" />
							<button class="o-header__search-button" for="o-header__search-form"><span>Search</span></button>
						</form>
					</div>
				</div>

				<div class="o-header__masthead-mobile">
					<a href="#" title="Go to Financial Times homepage"><span>Financial Times</span></a>
				</div>

				<nav class="o-header__nav-container" role="navigation" aria-label="Primary navigation">
					<ol class="o-header__nav">
						<li class="o-header__nav-item o-header__meganav-container">
							<!-- Links to a core experience nav outside of the header -->
							<a class="o-header__nav-link o-header__nav-link--toggle o--if-no-js" href="#">
								<span class="o-header__meganav-toggle o-header__meganav-toggle--open">Menu</span>
							</a>

							<div class="o--if-js">
								<div class="o-header__nav-container">
									<button class="o-header__nav-link o-header__nav-link--toggle" data-o-header-togglable data-o-header-togglable-nav>
										<span class="o-header__meganav-toggle o-header__meganav-toggle--open">Menu</span>
										<span class="o-header__meganav-toggle o-header__meganav-toggle--close">Close</span>
									</button>

									<ol class="o-header__meganav">
										<li class="o-header__meganav-section o-header__meganav-section--desktop">
											<ol class="o-header__meganav-items">
												{{ #desktopMeganavItems }}
												<li class="o-header__meganav-item o-header__meganav-section-head">
													<a class="o-header__meganav-link" href="{{url}}">{{name}}</a>
												</li>
												{{ /desktopMeganavItems }}
											</ol>
										</li>

										<li class="o-header__meganav-section o-header__meganav-section--collapsible o-header__meganav-section--mobile">
											<button class="o-header__meganav-section-head" data-o-header-selectable aria-selected="true"><span>Edition</span></button>
											<ol class="o-header__meganav-items">
												<li class="o-header__meganav-item">
													<a class="o-header__meganav-link" aria-selected="true">UK Edition</a>
												</li>
												<li class="o-header__meganav-item">
													<a class="o-header__meganav-link" href="#">International Edition</a>
												</li>
											</ol>
										</li>

										<li class="o-header__meganav-item o-header__meganav-section--mobile">
											<a class="o-header__meganav-link" href="#">Home</a>
										</li>

										{{ #meganavSections }}
										<li class="o-header__meganav-section o-header__meganav-section--collapsible">
											<button class="o-header__meganav-section-head o-header__meganav-section-head--mobile" data-o-header-selectable><span>{{name}}</span></button>
											<p class="o-header__meganav-section-head o-header__meganav-section-head--desktop">{{name}}</p>
											<ol class="o-header__meganav-items">
												{{ #meganavSectionItems }}
												<li class="o-header__meganav-item">
													<a class="o-header__meganav-link" href="{{url}}">{{name}}</a>
												</li>
												{{ /meganavSectionItems }}
											</ol>
										</li>
										{{ /meganavSections }}

										{{ #mobileMeganavItems }}
										<li class="o-header__meganav-item o-header__meganav-section--mobile">
											<a class="o-header__meganav-link" href="{{url}}" {{attributes}}>{{{name}}}</a>
										</li>
										{{ /mobileMeganavItems }}
									</ol>
								</div>
							</div>
						</li>

						{{ #navItems }}
						<li class="o-header__nav-item">
							<a class="o-header__nav-link" href="{{url}}" aria-selected="{{selected}}">{{{name}}}</a>
						</li>
						{{ /navItems }}
					</ol>
				</nav>
			</div>
		</div>
	</div>
</header>

